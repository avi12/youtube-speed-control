{
  "name": "youtube-speed-control",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "avi12/youtube-speed-control",
  "homepage": "https://avi12.com",
  "author": {
    "name": "avi12",
    "email": "avi6106@gmail.com"
  },
  "bugs": {
    "email": "avi6106@gmail.com"
  },
  "devDependencies": {
    "@babel/core": "~7.10.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-transform-runtime": "~7.10.1",
    "@babel/preset-env": "~7.10.1",
    "autoprefixer": "~9.8.0",
    "chrome-store-update": "~0.2.5",
    "cssnano": "^4.1.10",
    "fs-extra": "~9.0.0",
    "html-minifier": "^4.0.0",
    "jszip": "^3.5.0",
    "postcss": "~7.0.31",
    "prettier": "^2.1.2",
    "recursive-readdir": "^2.2.2",
    "semistandard": "~14.2.0",
    "set-json-version": "~1.0.3",
    "ssri": "~8.0.0",
    "stylelint": "~13.5.0",
    "stylelint-config-ccb": "^1.1.0",
    "stylelint-config-standard": "^20.0.0",
    "terser": "^4.7.0",
    "web-ext": "^4.2.0",
    "webext-store-incompat-fixer": "~0.1.6",
    "zip-self": "~0.2.4"
  },
  "browserslist": [
    "Firefox ESR",
    "Firefox >= 48",
    "Chrome >= 22",
    "Opera >= 15",
    "Edge >= 14",
    "unreleased Firefox versions",
    "unreleased Chrome versions",
    "unreleased Opera versions",
    "unreleased Edge versions"
  ],
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid",
    "singleQuote": false
  },
  "eslintConfig": {
    "rules": {
      "quotes": [
        "warn",
        "double"
      ]
    }
  },
  "scripts": {
    "build": "node build",
    "build-minify": "node build --minify",
    "pack": "web-ext build --overwrite-dest --artifacts-dir dist_packed --source-dir dist",
    "build-pack": "yarn run build-minify && yarn run pack && yarn run pack-self",
    "pack-stores": "webext-store-incompat-fixer -i dist_packed/youtube_speed_control-{version}.zip --edge-locale-inclusions en --stores edge,firefox",
    "pack-self": "zip-self -o dist_packed/youtube_speed_control-{version}-source.zip",
    "pack-opera": "yarn run pack && yarn run pack-stores -s opera",
    "pack-firefox": "yarn run pack && yarn run pack-stores -s firefox",
    "deploy": "yarn run pack-stores & yarn run pack-self & yarn run deploy-chrome",
    "run-browser": "web-ext run --no-config-discovery --start-url https://www.youtube.com/watch?v=dQw4w9WgXcQ --source-dir dist --verbose --target",
    "run-firefox": "yarn run-browser firefox-desktop",
    "run-firefox-android": "yarn run-browser firefox-android",
    "run-chromium": "yarn run-browser chromium",
    "lint-css": "stylelint src/**/*.css --fix",
    "lint-ext": "web-ext lint --source-dir src",
    "set-version": "set-json-version -f package.json dist/manifest.json src/manifest.json -v"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "dependencies": {
    "vue": "^2.6.12"
  }
}
