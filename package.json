{
  "name": "youtube-speed-control",
  "version": "2.1.2",
  "description": "Control the speed of YouTube videos!",
  "repository": "https://github.com/avi12/youtube-speed-control",
  "license": "GPL-3.0-or-later",
  "author": "avi12 <avi6106@gmail.com>",
  "homepage": "https://avi12.com",
  "bugs": {
    "email": "avi6106@gmail.com"
  },
  "scripts": {
    "serve": "rollup -c -w",
    "build": "rollup -c",
    "pack-self": "zip-self -o dist_packed/youtube-speed-control-{version}-source.zip",
    "pack": "web-ext build --overwrite-dest --artifacts-dir dist_packed --source-dir dist --filename=youtube-speed-control-{version}.zip",
    "build-for-firefox": "node build-for.js --i dist_packed/youtube-speed-control-{version}.zip --browser=firefox",
    "build-for-opera": "node build-for.js --i dist_packed/youtube-speed-control-{version}.zip --browser=opera",
    "webext-incompat-fix": "webext-store-incompat-fixer -i dist_packed/youtube-speed-control-{version}.zip -s chrome,edge,firefox,opera",
    "build-pack": "pnpm run build && pnpm run pack && pnpm run webext-incompat-fix && pnpm run pack-self && pnpm run build-for-firefox",
    "deploy": "web-ext-deploy --env --verbose",
    "set-version": "set-json-version -f package.json dist/manifest.json -v",
    "run-browser": "web-ext run --no-config-discovery --start-url https://www.youtube.com/watch?v=dQw4w9WgXcQ --source-dir dist --verbose --target",
    "run-firefox": "pnpm run-browser firefox-desktop",
    "run-chromium": "pnpm run-browser chromium"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.3.0",
    "@sveltejs/eslint-config": "github:sveltejs/eslint-config",
    "@tsconfig/svelte": "^2.0.1",
    "@types/chrome": "^0.0.162",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "adm-zip": "^0.5.9",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-svelte3": "^3.2.1",
    "postcss": "^8.3.9",
    "prettier-plugin-svelte": "^2.4.0",
    "rollup": "^2.60.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "1.13.1",
    "set-json-version": "^1.0.6",
    "svelte": "^3.43.2",
    "svelte-materialify": "0.3.7",
    "svelte-preprocess": "^4.9.8",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "web-ext": "^6.5.0",
    "yargs": "^17.2.1"
  }
}
